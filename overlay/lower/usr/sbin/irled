#!/bin/sh

# set parameters from cli, if empty
[ -z "$mode" ] && mode=$1
[ -z "$type" ] && type=$2

case "$type" in
	ir850 | ir940 | white)
		pin=$(get gpio_${type})
		;;
	*)
		# select first non-empty pin of available
		for type in ir850 ir940 white; do
			pin=$(get gpio_${type})
			[ -n "$pin" ] && break
		done
		# set most common type for error message below
		type=ir850
		;;
esac

if [ -z "$pin" ]; then
	echo "Please define LED GPIO pin"
	echo "fw_setenv gpio_${type} <pin>"
	exit 1
fi

case ${pin:(-1)} in
	o)
		pin_on=0
		pin_off=1
		;;
	O | *)
		pin_on=1
		pin_off=0
		;;
esac
pin=${pin:0:(-1)}

case "$mode" in
	on | 1)
		gpio set $pin $pin_on > /dev/null
		;;
	off | 0)
		gpio set $pin $pin_off > /dev/null
		;;
	read)
		gpio value $pin
		;;
	~ | toggle)
		gpio toggle $pin > /dev/null
		;;
	*)
		echo "Unknown mode"
		exit 3
		;;
esac

exit 0
